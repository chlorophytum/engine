{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"target": "es2017",
		"sourceMap": true,
		"module": "commonjs",
		"importHelpers": true,
		"lib": ["es2017", "es2018", "esnext"],
		"moduleResolution": "node",
		"strict": true,
		"strictBindCallApply": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"experimentalDecorators": true
	}
}
